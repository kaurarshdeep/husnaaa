            <input type="text" id="punjabi">

<script>
function insertTextInInputValue(buttonValueIs){
             var inputElementIs = document.getElementById("punjabi");
            inputElementIs.value = inputElementIs.value + buttonValueIs;
        }
function eraseText() {
    var value = document.getElementById("punjabi").value;
    document.getElementById("punjabi").value = value.substr(0, value.length - 1);
}


</script>	 
             	
